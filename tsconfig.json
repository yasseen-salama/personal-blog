{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "paths": {
        "*": [
          "types/*",
          "*"
        ]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "public", ".cache"]
  }